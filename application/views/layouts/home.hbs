<!DOCTYPE html>
<html lang ="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<link rel="stylesheet" type="text/css" href="public/css/form.css">
    <script defer type="text/javascript" src="public/js/formvalidation.js"></script>
    <script type="text/javascript" src="public/js/frontend.js"></script>
    <nav>
        {{> navigator}}
    </nav>
</head>
<body>
    <div id="container">
        {{log this}}
        {{#if (emptyObject messages)}}
        {{> flashmessage}}
        {{/if}}
        {{{body}}}
      
    </div>
    {{#if logged}}
        <script>
            let ele = document.getElementById('lo-button');
            if(ele){
                ele.onclick = (even) => {
                    fetch('/users/logout', {
                        method: "POST"
                    })
                    .then((data) => {
                        location.replace('/');
                    })
                }
            }
        </script>
    {{/if}}

</body>
